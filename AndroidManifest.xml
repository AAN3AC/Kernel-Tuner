        <activity
            android:name=".shortcuts.TISShortcut"
            android:label="Kernel Tuner - Shortcuts" >
        </activity>
        <activity
            android:name=".shortcuts.VoltageShortcut"
            android:label="Kernel Tuner - Shortcuts" >
        </activity>
        <activity
            android:name=".shortcuts.OOMShortcut"
            android:label="Kernel Tuner - Shortcuts" >
        </activity>

        <service android:name=".WidgetUpdateService" >
        </service>
        <service android:name=".WidgetUpdateServiceBig" >
        </service>
        <service
            android:name=".NotificationService"
            android:exported="false"
            android:process=":background" >
            <intent-filter>
                <action android:name="rs.pedjaapps.KernelTuner.NotificationService" />
            </intent-filter>
        </service>


		<activity
            android:name="rs.pedjaapps.KernelTuner.BackupRestore"
            android:label="Backup/Restore"
            android:theme="@style/Theme.Sherlock.Light" >
			<intent-filter>
				<action android:name="rs.pedjaapps.KernelTuner.BackupRestore" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
        </activity>
		
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>
