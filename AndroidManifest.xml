<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="rs.pedjaapps.KernelTuner"
    android:installLocation="internalOnly"
    android:versionCode="404022013"
    android:versionName="4.1.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/IndicatorLight" >

        <!-- android:hardwareAccelerated="true" -->
        <activity
            android:name="rs.pedjaapps.KernelTuner.KernelTuner"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Preferences"
            android:exported="true"
            android:icon="@drawable/settings"
            android:label="@string/title_preferences"
            android:theme="@style/IndicatorLight" >
        </activity>

        <receiver
            android:name="StartupReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <service
            android:name=".StartupService"
            android:exported="false" >
            <intent-filter>
                <action android:name="rs.pedjaapps.KernelTuner.StartupService" />
            </intent-filter>
        </service>

        <receiver
            android:name=".AppWidget"
            android:icon="@drawable/ic_launcher"
            android:label="Kernel Tuner 2x1" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="rs.pedjaapps.KernelTuner.AppWidget.ACTION_CLICK" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_2x1" />
        </receiver>
        <receiver
            android:name=".AppWidgetBig"
            android:icon="@drawable/ic_launcher"
            android:label="Kernel Tuner 4x4" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="rs.pedjaapps.KernelTuner.AppWidget.ACTION_CLICK" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_4x4" />
        </receiver>

        <activity
            android:name=".Gpu"
            android:exported="true"
            android:icon="@drawable/gpu"
            android:label="@string/title_gpu"
            android:theme="@style/Theme.Sherlock.Light.Dialog.NoTitleBar" >
        </activity>
        <activity
            android:name=".MiscTweaks"
            android:exported="true"
            android:icon="@drawable/misc"
            android:label="@string/title_misc"
            android:uiOptions="splitActionBarWhenNarrow"
            android:theme="@style/SwitchCompatAndSherlockLight" >
        </activity>
        <activity
            android:name=".Mpdecision"
            android:exported="true"
            android:icon="@drawable/dual"
            android:label="@string/title_mpdecision"
            android:uiOptions="splitActionBarWhenNarrow"
            android:theme="@style/SwitchCompatAndSherlockLight" >
        </activity>
        <activity
            android:name=".Thermald"
            android:exported="true"
            android:icon="@drawable/temp"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="@string/title_thermald"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".About"
            android:icon="@drawable/about"
            android:label="@string/title_about"
            android:theme="@style/Theme.Sherlock.Light.Dialog.NoTitleBar" >
            <intent-filter>
                <action android:name="rs.pedjaapps.KernelTuner.About" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Changelog"
            android:icon="@drawable/ic_menu_recent_history"
            android:label="@string/title_changelog"
            android:theme="@style/Theme.TransparentDark" >
            <intent-filter>
                <action android:name="rs.pedjaapps.KernelTuner.Changelog" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompatibilityCheck"
            android:label="@string/title_check"
            android:theme="@style/Theme.TransparentNoTitle" >
        </activity>
        <activity
            android:name=".Profiles"
            android:exported="true"
            android:icon="@drawable/ic_menu_cc"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="@string/title_profiles"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".ProfileEditor"
            android:icon="@drawable/edit_dark"
            android:uiOptions="splitActionBarWhenNarrow"
            android:label="@string/activity_title_profile_editor"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".Swap"
            android:exported="true"
            android:icon="@drawable/swap"
            android:label="@string/swap"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".SystemInfo"
            android:exported="true"
            android:icon="@drawable/ic_menu_info_details"
            android:label="@string/info"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".CPUActivity"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/title_cpu"
            android:screenOrientation="portrait"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".VoltageActivity"
            android:exported="true"
            android:icon="@drawable/voltage"
            android:label="@string/title_voltage"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".TISActivity"
            android:exported="true"
            android:icon="@drawable/times"
            android:label="@string/title_tis"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".GovernorActivity"
            android:exported="true"
            android:icon="@drawable/dual"
            android:label="@string/title_governor"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".Reboot"
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="Reboot" >
        </activity>
        <activity
            android:name=".OOM"
            android:exported="true"
            android:icon="@drawable/swap"
            android:label="OOM"
            android:theme="@style/Theme.Dialog.NoTitleBar.Light" >
        </activity>
        <activity
            android:name=".SDScannerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:exported="true"
            android:icon="@drawable/sd"
            android:label="SD Card Analyzer"
            android:screenOrientation="portrait"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".SDScannerConfigActivity"
            android:configChanges="keyboardHidden|orientation"
            android:exported="true"
            android:icon="@drawable/sd"
            android:label="SD Card Analyzer"
            android:screenOrientation="portrait"
            android:theme="@style/SwitchCompatAndSherlockLight" >
        </activity>
        <activity
            android:name=".TISActivityChart"
            android:exported="true"
            android:icon="@drawable/times"
            android:label="@string/title_tis"
            android:theme="@style/IndicatorLight" >
        </activity>
        <activity
            android:name=".ui.EditActivity"
            android:exported="true"
            android:icon="@drawable/ic_locale_plugin"
            android:label="@string/plugin_name"
            android:theme="@style/Theme.Locale.Light"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="ExportedActivity" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".receiver.FireReceiver"
            android:exported="true"
            android:process=":background"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.FIRE_SETTING" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".shortcuts.Shortcuts"
            android:label="Kernel Tuner - Shortcuts" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shortcuts.CPUShortcut"
            android:label="Kernel Tuner - Shortcuts" >
        </activity>
        <activity
            android:name=".shortcuts.GovernorShortcut"
            android:label="Kernel Tuner - Shortcuts" >
