<?xml version="1.0" encoding="utf-8"?>
<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">
    <header 
        android:fragment="rs.pedjaapps.KernelTuner.ui.PreferencesFragment"
        android:title="Application"
        android:summary="Base Application Settings"
		android:icon="@drawable/ic_launcher">
        <extra android:name="settings" android:value="application" />
    </header>
    <header 
        android:fragment="rs.pedjaapps.KernelTuner.ui.PreferencesFragment"
        android:title="Widget"
        android:summary="Widget Settings"
		android:icon="@drawable/prefs_widget">
		<extra android:name="settings" android:value="widget" />
    </header>
    <header 
        android:fragment="rs.pedjaapps.KernelTuner.ui.PreferencesFragment"
        android:title="Notifications"
        android:summary="Notification Settings"
		android:icon="@drawable/prefs_notifications">
		<extra android:name="settings" android:value="notification" />
    </header>
    <header 
        android:fragment="rs.pedjaapps.KernelTuner.ui.PreferencesFragment"
        android:title="LogCat"
        android:summary="LogCat Settings" 
		android:icon="@drawable/log">
		<extra android:name="settings" android:value="logcat" />
    </header>
    <header 
        android:fragment="rs.pedjaapps.KernelTuner.ui.PreferencesFragment"
        android:title="User Interface"
        android:summary="UI Settings" 
		android:icon="@drawable/theme">
		<extra android:name="settings" android:value="ui" />
    </header>
    <header 
        android:fragment="rs.pedjaapps.KernelTuner.ui.PreferencesFragment"
        android:title="Main Screen"
        android:summary="Main Screen Settings" >
		<extra android:name="settings" android:value="main" />
    </header>
	<header
		android:title="Backup And Restore"
		android:summary="Backup/Restore all settings"
		android:icon="@drawable/save">

		<intent android:action="rs.pedjaapps.KernelTuner.ui.BackupRestore"
		/>
	</header>

    <header
		android:title="About"
		android:summary="Info about application/author"
		android:icon="@drawable/about">

		<intent android:action="rs.pedjaapps.KernelTuner.About"
		/>

	</header>

	<header
		android:title="Changelog"
		android:summary="What has been changed"
		android:icon="@drawable/changelog">

		<intent android:action="rs.pedjaapps.KernelTuner.Changelog"
		/>

	</header>

	<header
		android:title="System Info"
		android:summary="System Information"
		android:icon="@drawable/info"
		android:key="sysInfo">

		<intent android:action="rs.pedjaapps.KernelTuner.SystemInfo"
		/>

	</header>
</preference-headers>
