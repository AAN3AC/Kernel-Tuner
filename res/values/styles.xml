    <item name="textAppearance">@style/TextAppearance</item>
     <item name="homeAsUpIndicator">@drawable/indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/indicator</item>
</style>
	
	<style name="IndicatorLight" parent="Theme.Sherlock.Light">
        <item name="homeAsUpIndicator">@drawable/indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/indicator</item>
    </style>
    <style name="IndicatorDark" parent="Theme.Sherlock">
        <item name="homeAsUpIndicator">@drawable/indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/indicator</item>
